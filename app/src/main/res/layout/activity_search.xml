<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/btn_search"
        android:layout_width="67dp"
        android:layout_height="58dp"
        android:layout_alignTop="@+id/heading_search"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@+id/search_bar"
        android:background="@color/white"
        app:srcCompat="@mipmap/search_button" />

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/search_layout"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:text="@string/search_bar"
        android:textColor="#999999" />

    <TextView
        android:id="@+id/heading_search"
        android:layout_width="167dp"
        android:layout_height="28dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="@string/heading_search"
        android:textSize="24sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/result_list"
        android:layout_width="match_parent"
        android:layout_height="576dp"
        android:layout_below="@+id/search_bar"
        android:layout_marginTop="41dp"></androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>