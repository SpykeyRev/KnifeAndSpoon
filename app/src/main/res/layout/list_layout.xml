<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/layoutFeedMainAndPic2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageSearchRicetta"
            android:layout_width="273dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/app_logo" />

        <LinearLayout
            android:id="@+id/layoutFeedNomeRicetta2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nomeRicetta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Risotto con le erbette"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22dp" />

            <LinearLayout
                android:id="@+id/layoutFeedTempoAutoreRicetta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tempoPreparazione"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 minuti"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/autoreRicetta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inviata da: DioScalzo05"
                    android:textSize="14dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>