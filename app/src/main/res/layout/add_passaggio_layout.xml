<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRemovePassaggio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="4dp"
        android:background="@color/colorPrimary"
        android:text="@string/rimuovi"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/txtTitoloPassaggio"
        android:text="@string/nuovo_passaggio"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="176dp"
        android:layout_toStartOf="@id/btnRemovePassaggio" />

    <EditText
        android:id="@+id/etDescrizione"
        android:layout_width="315dp"
        android:layout_height="149dp"
        android:layout_below="@+id/txtTitoloPassaggio"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@+id/btnRemovePassaggio"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/inserisci_descrizione_passaggio"
        android:inputType="textMultiLine" />

</RelativeLayout>